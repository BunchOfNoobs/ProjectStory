<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bunchofnoobs.thedarkage.Home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="118dp"
        tools:text="THE TITLE HERE"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnContinue"
        android:layout_below="@+id/textView"
        android:layout_marginTop="43dp"
        android:text="New Game"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="307dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnNewGame"
        android:layout_alignEnd="@+id/btnOption" />

    <Button
        android:id="@+id/btnOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContinue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Option"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="396dp" />

</RelativeLayout>
